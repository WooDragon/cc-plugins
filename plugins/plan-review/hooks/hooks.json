{
  "description": "Adversarial red-team review on ExitPlanMode via Gemini or Claude engine",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/plan-review.sh",
            "timeout": 120,
            "statusMessage": "Red Team reviewing plan..."
          }
        ]
      }
    ]
  }
}
